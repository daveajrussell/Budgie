@model ResetPasswordViewModel


@{
    Layout = "_LayoutLogin";
}

<div class="col-md-6">
    <div class="card mx-4">
        <div class="card-body p-4">
            <h1>Account</h1>
            <p class="text-muted">Reset your password</p>
            <form asp-action="ForgotPassword" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="icon-user"></i></span>
                    </div>
                    <input asp-for="Email" type="text" class="form-control" placeholder="Email">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="icon-user"></i></span>
                    </div>
                    <input asp-for="Password" type="text" class="form-control" placeholder="Password">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="icon-user"></i></span>
                    </div>
                    <input asp-for="ConfirmPassword" type="text" class="form-control" placeholder="Repeat password">
                </div>
                <button type="submit" class="btn btn-block btn-success">Reset</button>
            </form>
            <a asp-action="Login" asp-controller="Account">Click here to return to the login page</a>
        </div>
    </div>
</div>